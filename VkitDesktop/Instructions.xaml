<Window x:Class="VkitDesktop.Instructions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instructions" Height="192" Width="711" Background="WhiteSmoke">
    <Grid>
<StackPanel Orientation="Vertical" Margin="5,5,0,0">
            <TextBlock Text="1.  Select the format you are using (Standard, Legacy, etc)."/>
            <TextBlock Text="2.  All available Virtual Cards are available on the left. Enter text in the filter textbox to narrow down results."/>
            <TextBlock Text="3.  Double-Click the card or press 'Add BB' or 'Add WB' to add cards to your list. BB=Black Border, WB = White Border. "/>
            <TextBlock Text="4.  Select a card from the right and select 'Remove' to remove it from your list."/>
            <TextBlock Text="5.  Click 'Generate PDF...' to generate a PDF containing all cards in the right-hand list."/>
            <TextBlock Text="Note:  The 'Import from Holotable Deck...' button will import vcards from a Holotable-exported deck list. (not perfect, but close)"/>
            
        </StackPanel>

        <Rectangle Height="1" Name="rectangle1" Stroke="LightGray" HorizontalAlignment="Stretch" Margin="10,0,10,40" VerticalAlignment="Bottom" />
        <Button Content="OK" Margin="0,0,10,10" Height="23" Name="button1" Width="75" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="button1_Click" />
    </Grid>
</Window>
